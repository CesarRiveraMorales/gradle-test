FROM node:alpine AS builder
RUN mkdir /app
WORKDIR /app
COPY . ./
RUN yarn && yarn build


FROM nginx:1.15.2-alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
